<%- include('../partials/head') %>
  <div class="d-flex justify-content-center ">
    <form action="/admin/add" method="post" onsubmit="return validate()" class="col-4 mt-3 bg-dark p-4">
      <h2 class="mb-4 text-center text-white">Add Employee</h2>


      <div class="mb-3">
        <label class="form-label text-white" for="name">User name</label>
        <input type="text" id="name" name="name" class="form-control" required />
      </div>


      <div class="mb-3">
        <label class="form-label text-white" for="email">Email address</label>
        <input type="email" id="email" name="email" class="form-control" required />
      </div>


      <div class="mb-3">
        <label class="form-label text-white" for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" required />
      </div>


      <div class="mb-3">
        <label class="form-label text-white" for="retypepassword">Retype password</label>
        <input type="password" id="retypepassword" name="retypepassword" class="form-control" required />
      </div>


      <div class="mb-3">
        <label class="form-label text-white" for="admin">Is Admin</label>
        <input type="checkbox" id="admin" name="admin">
      </div>

      <div>
        <button type="submit" value="Submit" class="btn btn-danger col-12 mb-3">Add</button>
      </div>
    </form>
  </div>
  <script>
    function validate() {
      let pass = document.getElementById('password');
      let confirmpass = document.getElementById('retypepassword');
      if (pass.value == confirmpass.value) {
        if (pass.value.length > 6)
          return true;
        else { alert("Password length should be greater than 6"); return false }
      } else {
        alert("Password Does Not Match !");
        return false;
      }
    }
  </script>
  </body>

  </html>
